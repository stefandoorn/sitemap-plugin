<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylius.controller.sitemap" class="SyliusSitemapBundle\Controller\SitemapController">
            <argument type="service" id="sylius.sitemap_renderer"/>
            <argument type="service" id="sylius.sitemap_builder" />
        </service>
        <service id="sylius.sitemap_renderer.twig_adapter" class="SyliusSitemapBundle\Renderer\TwigAdapter">
            <argument type="service" id="templating" />
            <argument>%sylius.sitemap_template%</argument>
        </service>
        <service id="sylius.sitemap_renderer" class="SyliusSitemapBundle\Renderer\SitemapRenderer">
            <argument type="service" id="sylius.sitemap_renderer.twig_adapter" />
        </service>
        <service id="sylius.sitemap_factory" class="SyliusSitemapBundle\Factory\SitemapFactory" />
        <service id="sylius.sitemap_url_factory" class="SyliusSitemapBundle\Factory\SitemapUrlFactory" />
        <service id="sylius.sitemap_builder" class="SyliusSitemapBundle\Builder\SitemapBuilder">
            <argument type="service" id="sylius.sitemap_factory" />
        </service>
        <service id="sylius.sitemap_provider.product" class="SyliusSitemapBundle\Provider\ProductUrlProvider" >
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="router" />
            <argument type="service" id="sylius.sitemap_url_factory" />
            <tag name="sylius.sitemap_provider" />
        </service>
    </services>
</container>
